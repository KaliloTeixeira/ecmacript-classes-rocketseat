// Exercicios 06 e 07
const nome = 'Diego';
const idade = 23;

console.log(`O usuário ${nome} tem ${idade} anos de idade.`);

const usuario = {
    nome,
    idade,
    cidade: 'Rio do Sul'
}

console.log(usuario);